extends layout

block content
    div.area
        .container
            .py-5
                h1 Your Teams
            a.btn.btn-success(href='/teams/create') Create Team
            table.table
                thead
                    tr
                        th(scope='col') Name
                        th(scope='col') Description
                        th(scole='col') Members
                tbody
                    each i in list
                        tr
                            th 
                                a(href='/teams/details/#{i.id}') #{i.name}
                            th #{i.description}
                            th #{i.members.length}

    //- .album.py-5.bg-light
        .container
            .row
                each i in list
                    .col-md-4
                        .card.mb-4.shadow-sm
                            svg.bd-placeholder-img.card-img-top(width='100%' height='225' xmlns='http://www.w3.org/2000/svg' preserveaspectratio='xMidYMid slice' focusable='false' role='img' aria-label='Placeholder: Thumbnail')
                                img(src='#{i.image}' alt='image' style='width:100%;height:100%' class="rounded")
                                title Placeholder
                                rect(width='100%' height='100%' fill='#55595c')
                                text(x='40%' y='50%' fill='#eceeef' dy='.3em') #{i.name}
                            .card-body
                                p.card-text #{i.description}
                                .d-flex.justify-content-between.align-items-center
                                    .btn-group
                                        button.btn.btn-sm.btn-outline-secondary(type='button') View
                                        button.btn.btn-sm.btn-outline-secondary(type='button') Edit
                                    small.text-muted #{i.members.length} Members
                .col-md-4
                    .card.mb-4.shadow-sm
                        svg.bd-placeholder-img.card-img-top(width='100%' height='225' xmlns='http://www.w3.org/2000/svg' preserveaspectratio='xMidYMid slice' focusable='false' role='img' aria-label='Placeholder: Thumbnail')
                            title Placeholder
                            rect(width='100%' height='100%' fill='#55595c')
                            text(x='40%' y='50%' fill='#eceeef' dy='.3em') Thumbnail
                        .card-body
                            p.card-text
                            | This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
                            .d-flex.justify-content-between.align-items-center
                                .btn-group
                                    button.btn.btn-sm.btn-outline-secondary(type='button') View
                                    button.btn.btn-sm.btn-outline-secondary(type='button') Edit
                                small.text-muted 9 mins

