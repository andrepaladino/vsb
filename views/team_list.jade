extends layout

block content
    div.area
        h1 Your Teams
        </br>
        a.btn.btn-success(href='/teams/create') Create Team
        
        table.table
            thead
                tr
                    th(scope='col') Name
                    th(scope='col') Description
                    th(scope='col') Edit
                    th(scole='col') Delete
            tbody
                each i in list
                    tr
                        th #{i.name}
                        th #{i.description}
                        th    
                            a.btn.btn-info(href='/teams/details/#{i.id}')
                                span.material-icons
                                    | edit
                        th    
                            a.btn.btn-danger.delete-team(href='#', data-id = i.id)
                                span.material-icons
                                    | delete_forever
