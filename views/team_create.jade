extends layout

block content
    div.area

        h1= pageTitle

        if(errors)
            ul.list-group
                each err in errors
                    li.list-group-item.text-danger= err

        form(name='register', method='post', action='/teams/create', encType = 'multipart/form-data')
            .form-group
                label Name
                input.form-control(type='text' placeholder='Team Name' name='name')
            .form-group
                label Description
                textarea.form-control(maxlength='50', placeholder='Description', name='description')
            .form-group 
                input(type='file', class='form-control-file', name='image')
            
            input(class='btn btn-success', type='submit', value='add')