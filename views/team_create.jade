extends layout

block content
    div.area
        .container
            .py-5
                h1= pageTitle
                p.lead Add information below to create your team.


            if(errors)
                ul.list-group
                    each err in errors
                        li.list-group-item.text-danger= err

            form(name='register', method='post', action='/teams/create', encType = 'multipart/form-data')
                .form-group
                    label Name
                    input.form-control(maxlength='30' type='text' placeholder='Team Name' name='name')
                .form-group
                    label Description
                    textarea.form-control(maxlength='50', placeholder='Description', name='description')
                .form-group 
                    label Image
                    input(type='file', class='form-control-file', name='image')
                
                input(class='btn btn-success', type='submit', value='Create')